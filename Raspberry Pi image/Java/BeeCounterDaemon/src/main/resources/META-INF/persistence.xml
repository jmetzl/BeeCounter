<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">


	<persistence-unit name="beecounterPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
			<class>com.apis_mellifera.model.BeeTraffic</class>
			<class>com.apis_mellifera.model.Entrance</class>
			<class>com.apis_mellifera.model.LightBarrier</class>
			<!-- shouldn't be valid for java SE per specification, but it works for EclipseLink ... -->
			<exclude-unlisted-classes>false</exclude-unlisted-classes>
			<properties>
				<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
				<property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/beecounterdb"/>
				<property name="javax.persistence.jdbc.user" value="pi"/>
				<property name="javax.persistence.jdbc.password" value="&amp;pegasus1&amp;"/>
				<property name="eclipselink.logging.level" value="FINE"/>
				<property name="eclipselink.ddl-generation" value="create-tables"/>
			</properties>
		</persistence-unit>
</persistence>